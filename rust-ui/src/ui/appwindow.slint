import { Button, VerticalBox, LineEdit, HorizontalBox } from "std-widgets.slint";

export component AppWindow inherits Window {
    title: "Client";
    min-width: 1024px;
    min-height: 720px;

    in property <string> id-code;
    in property <string> auth-code;
    out property <string> remote-id <=> id.text;
    out property <string> remote-auth <=> auth.text;

    callback start();
 
    HorizontalLayout {
        VerticalBox {
            horizontal-stretch:1;
            alignment: LayoutAlignment.center;
            HorizontalBox {
                Text {
                    text: "本机邀请码:";
                    font-size: 18px;
                    font-family: "黑体";
                }
                Text {
                    width: 100%;
                    text: root.id-code;
                    font-size: 18px;
                    horizontal-alignment: TextHorizontalAlignment.left;
                }
            }
            HorizontalBox {
                Text {
                    text: "本机验证码:";
                    font-size: 18px;
                    font-family: "黑体";
                }
                Text {
                    width: 100%;
                    text: root.auth-code;
                    font-size: 18px;
                    horizontal-alignment: TextHorizontalAlignment.left;
                }
            }
        }
        Rectangle {
            width: 1px;
            background: #c3c5c4;
        }
        VerticalBox {
            horizontal-stretch:1;
            alignment: LayoutAlignment.space-between;
            HorizontalBox {
                id := LineEdit {
                    placeholder-text: @tr("请输入邀请码");
                    input-type: number;
                    height: 45px;
                    enabled: true;
                }
                auth := LineEdit {
                    placeholder-text: @tr("请输入验证码");
                    input-type: number;
                    height: 45px;
                    enabled: true;
                }
            }
            Button {
                text: "连接";
                height: 45px;
                clicked => {
                    root.start();
                }
            }
        }
    }

}
